#!/bin/bash --norc

declare -a ARGS=()

while [ "${1+defined}" ]; do
  case "$1" in
    -Wl,@*)
        ARGS=("${ARGS[@]}" -Wl,--start-group "$1")
        ;;
    *)
        ARGS=("${ARGS[@]}" "$1")
        ;;
  esac
  shift
done

PATH="external/mingw_compiler_win64/usr/libexec/gcc/x86_64-w64-mingw32.shared/4.9.4:external/mingw_compiler_win64/usr/bin:$PATH"
exec -a x86_64-w64-mingw32.shared-gcc \
    external/mingw_compiler_win64/usr/bin/x86_64-w64-mingw32.shared-gcc \
    "${ARGS[@]}"
